let askUserName=()=>{
    let userName
    while(true){
        userName=prompt('Hi, welcome to the bingo game! What\'s your name? ')
        if(userName===null){
             alert('Do not click cancel!')
             continue
         }
         break
     }    if(typeof userName!=='string'||userName===''){
        console.log('Write your name! (do not leave it empty nor writing a number)w')
        return askUserName()
    }
    return userName
}
let showBingoCard=(bingoCard)=>{
    let stringBingoCard
    stringBingoCard=bingoCard.join(' ')
    console.log(stringBingoCard.substring(0,9)+'\n'+stringBingoCard.substring(10,19)+'\n'+stringBingoCard.substring(20,29))
}
let getRandomNumber=()=>{
    return (Math.floor(Math.random()*9))+1
}
let runFirstTurn=(bingoCard)=>{
    console.log('Your bingo card is: ')
    for(let i=0;i<15;i++){
        bingoCard.push(getRandomNumber())
        if(i===14){
            bingoCard=bingoCard.slice(0,5).sort( function( a , b){
                if(a > b) return 1
                if(a < b) return -1
                return 0
            }).concat(bingoCard.slice(5,10).sort( function( a , b){
                if(a > b) return 1
                if(a < b) return -1
                return 0
            }).concat(bingoCard.slice(10,15).sort( function( a , b){
                if(a > b) return 1
                if(a < b) return -1
                return 0
            })))
            showBingoCard(bingoCard)
        }
    }
    let anotherCard
    while(true){
       anotherCard =prompt('Do you want to get another bingo card? (write yes for a new card)')
        if(anotherCard===null){
            alert('Do not click cancel!')
            continue
        }
        break
    }
    if(anotherCard.toLowerCase()==='yes'){
        bingoCard=[]
        return runFirstTurn(bingoCard)
    }
}
let runNextTurn=(bingoCard)=>{
    let randomNumber=getRandomNumber(),match=false,line=false,bingo=false
    for(let i=0;i<bingoCard.length;i++){
        if(randomNumber===bingoCard[i]){
            bingoCard[i]='X'
            match=true
            if(i<5&&bingoCard.slice(0,5).every(number=>number==='X')){
                line=true
            }
            if(4<i<10&&bingoCard.slice(5,10).every(number=>number==='X')){
                line=true
            }
            if(9<i<15&&bingoCard.slice(10,15).every(number=>number==='X')){
                line=true
            }
            if(bingoCard.every(number=>number==='X')){
                bingo=true
            }
        }
    }
    if(match){
        console.log('The number is',randomNumber,'and there is a match! Here is your bingo card with the new changes:')
    }else{
        console.log('The number is',randomNumber,'and there are no matches. Here is your bingo card:')
    }
    showBingoCard(bingoCard)
    if(line&&!bingo){
        console.log('There is a line!')
    }
    if(bingo){
        console.log('Bingo!')
    }
}
let pointsResult=(points,allPoints,usersNames)=>{
    console.log('Your result is',points,'points')
    console.log('Each users points:')
    for(let i=0;i<usersNames.length;i++){
        console.log(usersNames[i]+':',allPoints[i])
    }
}
let runBingoGame=(usersNames,allPoints)=>{
    let bingoCard=[],turns=1,points=100
    usersNames.push(askUserName())
    runFirstTurn(bingoCard)
    console.log('Now you have 100 points and for every turn you make you will lose 2 points')
    while(true){
        runNextTurn(bingoCard)
        turns++
        if(bingoCard.every(number=>number==='X')){
            console.log('You have completed the bingo in',turns,'turns')
            points-=(turns*2)
            allPoints.push(points)
            pointsResult(points,allPoints,usersNames)
            break
        }
        if(confirm('Do you want to continue to next turn?')){
        }else{
            allPoints.push('Not Completed')
            break
        }
    }
    if(confirm('Do you want to play again?')){
        return runBingoGame(usersNames,allPoints)
    }
    console.log('Bye user!')
}
let usersNames=[],allPoints=[]
runBingoGame(usersNames,allPoints)
